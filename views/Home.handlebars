{{! Our Private Tours }}
<h1
  class="text-center font-bold text-3xl md:text-5xl pt-8 w-full"
  data-aos="fade-right"
>
  Our Private Tours
</h1>

<section
  class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 place-items-center md:px-16 gap-4 w-full"
>
  {{#each ToursCard}}
    <a
      href="{{this.Link}}"
      class="flex flex-col mt-6 text-gray-700 bg-white shadow-md rounded-xl px-2 min-w-full max-w-80 h-[23rem] hover:scale-105 transition-all"
    >
      <div class="overflow-hidden shadow-lg rounded-none">
        <img src="{{this.Image}}" alt="{{this.Headers}}" />
      </div>

      <div class="flex flex-col justify-between flex-1 px-2 py-4 space-y-10">
        <div>
          <h6 class="font-medium text-gray-500 text-sm">Private Tours</h6>
          <h5
            class="block font-sans text-xl antialiased font-semibold leading-snug tracking-normal text-blue-gray-900"
          >{{this.Headers}}</h5>
          <p
            class="block font-sans text-base antialiased font-light leading-relaxed text-inherit truncate"
          >{{this.Description}}</p>
        </div>

        <div class="text-end mt-4">
          <span>From </span>
          <span
            class="text-black font-bold text-xl"
          >{{this.Currency}}{{this.Price}}</span>
        </div>
      </div>
    </a>
  {{/each}}
</section>
